extends layout 

block content 
    div(id="artist-form-page")
        h1= title 

        form(method="POST" enctype="multipart/form-data" action="")
            if errors 
                ul(id="form-errors") 
                    for error in errors 
                        li!= error.msg
            div.form-group
                label(for='name') Name:
                input#name.form-control(type='text', placeholder='Name of artist' name='name' required='true' value=(undefined===artist ? '' : artist.name) )
            div.form-group
                label(for='description') Description:
                textarea#description.form-control(name='description' rows="50" value=(undefined===artist ? '' : artist.description))
            div.form-group
                label(for="image") Artist Image:
                input(type="file" name="image" value="") 
            button.button-27.btn-primary(type='submit') Submit 